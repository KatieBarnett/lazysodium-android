<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryD2</item>
		<item name="colorAccent">@color/colorAccentL3</item>
		<item name="android:fontFamily">@font/vision</item>
		<item name="fontFamily">@font/vision</item>
		<item name="android:lineSpacingMultiplier">1.4</item>
		<item name="android:textColor">@color/snow</item>
	</style>
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="AppTheme.NoActionBar.White">
		<item name="android:textColor">@color/snow</item>
	</style>

	<style name="TextInputLayoutTheme" parent="AppTheme">
		<item name="android:textSize">13sp</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

	<style name="Heading">
		<item name="android:layout_marginLeft">24dp</item>
		<item name="android:layout_marginRight">24dp</item>
		<item name="android:layout_marginTop">42dp</item>
		<item name="android:layout_marginBottom">12dp</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/colorPrimaryD2</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>
